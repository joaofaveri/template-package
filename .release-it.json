{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "hooks": {
    "before:init": ["echo Disable all hooks for an period...", "export HUSKY=0"],
    "after:release": ["echo Re-enables hooks", "unset HUSKY"]
  },
  "git": {
    "commitMessage": "🧹 chore(release): new release - v${version}",
    "commitArgs": ["-n", "-v", "-S --trailer 'author:release'"],
    "tagArgs": ["-s"]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ Features"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "refactor",
            "section": "♻️ Code Changes (Refactors)",
            "hidden": false
          },
          {
            "type": "docs",
            "section": "📝 Documentation",
            "hidden": false
          },
          {
            "type": "style",
            "section": "💎 Visual Changes",
            "hidden": false
          },
          {
            "type": "perf",
            "section": "📈 Performance Improvements",
            "hidden": false
          },
          {
            "type": "test",
            "section": "🧪 Code Tests",
            "hidden": false
          },
          {
            "type": "refactor",
            "section": "Code Changes",
            "hidden": false
          },
          {
            "type": "build",
            "section": "🏗️ Build System or External Dependencies",
            "hidden": false
          },
          {
            "type": "ci",
            "section": "📦 Continuous Integrations",
            "hidden": false
          },
          {
            "type": "chore",
            "section": "🧹 Other changes",
            "hidden": false
          },
          {
            "type": "revert",
            "section": "⏪ Reverts a Previous Commit",
            "hidden": false
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.This project follows the [Conventional Commits](https://www.conventionalcommits.org) specification and adheres to [Semantic Versioning](https: //semver.org/spec/v2.0.0.html).",
      "context": {
        "linkCompare": true
      }
    }
  }
}